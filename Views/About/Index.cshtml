@using EntityLayer.Concrete
@model List<About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{string delyazi = ""; }
@{string delicon = ""; }
@{string delcolor = ""; }
@{string stayazi = ""; }
@{string staicon = ""; }
@{string stacolor = ""; }
<h2>Hakkında Veri Listesi</h2>
<table class="table table-bordered text-center">
    <tr>
        <th>ID</th>
        <th>Hakkında Başlığı</th>
        <th>Durum</th>
        <th>Aktif / Pasif Yap</th>
    </tr>
    @foreach (var item in Model)
    {
        switch (item.AboutStatus)
        {
            case true:
                delyazi = "Pasif Yap";
                delicon = "fas fa-lock";
                delcolor = "btn btn-danger btn-sm";
                stacolor = "badge badge-success";
                staicon = "fas fa-lock-open";
                stayazi = "Aktif";
                break;
            case false:
                delyazi = "Aktif Yap";
                delicon = "fas fa-lock-open";
                delcolor = "btn btn-success btn-sm";
                stacolor = "badge badge-danger";
                staicon = "fas fa-lock";
                stayazi = "Pasif";
                break;
        }

        <tr>
            <td>@item.AboutID</td>
            <td>@item.AboutDetails1</td>
            <td><span class="@stacolor">@stayazi<i class="@staicon"></i></span></td>
            <td>
                <a class="@delcolor" href="/About/DeleteAbout/@item.AboutID">
                    <i class="@delicon"></i>
                    @delyazi
                </a>
            </td>
        </tr>
    }
</table>

<button class="btn btn-primary" data-toggle="modal" data-target="#Modal1">
    Yeni Hakıımızda
</button>

@Html.Action("AboutPartiaL", "About")