@using EntityLayer.Concrete
@model List<Heading>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{string catcolor = ""; }
@{string delyazi = ""; }
@{string delicon = ""; }
@{string delcolor = ""; }
@{string stayazi = ""; }
@{string staicon = ""; }
@{string stacolor = ""; }

<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">                   
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Başlık İşlemleri</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects text-center">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                #
                            </th>
                            <th style="width: 20%">
                                Başlık Adı
                            </th>
                            <th style="width: 20%">
                                Oluşturan Yazar
                            </th>
                            <th style="width: 19%">
                                Durum
                            </th>
                            <th style="width: 10%">
                                Kategori
                            </th>
                            <th style="width: 30%">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            switch (item.Category.CategoryName)
                            {
                                case "Tiyatro":
                                    catcolor = "badge badge-secondary";
                                    break;
                                case "Eğitim":
                                    catcolor = "badge badge-success";
                                    break;
                                case "Yazılım":
                                    catcolor = "badge badge-info";
                                    break;
                                case "Kitap":
                                    catcolor = "badge badge-primary";
                                    break;
                                case "Spor":
                                    catcolor = "badge badge-warning";
                                    break;
                                case "Film":
                                    catcolor = "badge badge-danger";
                                    break;
                                case "Dizi":
                                    catcolor = "badge badge-danger";
                                    break;
                                case "Sosyal Medya":
                                    catcolor = "badge badge-blue";
                                    break;
                                case "Seyahat":
                                    catcolor = "badge badge-dark";
                                    break;
                            }
                            switch (item.HeadingStatus)
                            {
                                case true:
                                    delyazi = "Pasif Yap";
                                    delicon = "fas fa-lock";
                                    delcolor = "btn btn-danger btn-sm";
                                    stacolor = "badge badge-success";
                                    staicon = "fas fa-lock-open";
                                    stayazi = "Aktif";
                                    break;
                                case false:
                                    delyazi = "Aktif Yap";
                                    delicon = "fas fa-lock-open";
                                    delcolor = "btn btn-success btn-sm";
                                    stacolor = "badge badge-danger";
                                    staicon = "fas fa-lock";
                                    stayazi = "Pasif";
                                    break;
                            }
                            //if (item.Category.CategoryName== "Yazılım")
                            //{
                            //    catcolor = "badge badge-info";
                            //}

                            <tr>
                                <td>
                                    @item.HeadingID
                                </td>
                                <td>
                                    <a>
                                        @item.HeadingName
                                    </a>
                                    <br />
                                    <small>
                                        @(((DateTime)item.HeadingDate).ToString("dd-MMM-yyyy"))
                                    </small>
                                </td>
                                <td>
                                    <ul class="list-inline">
                                        <li class="list-inline-item">
                                            <img alt="Avatar" class="table-avatar" src="@item.Writer.WriterImage">
                                        </li>
                                    </ul>
                                </td>
                                <td class="project-state">
                                    <span class="@stacolor">@stayazi
                                        <i class="@staicon"></i>
                                    </span>
                                </td>
                                <td class="project-state">
                                    <span class="@catcolor">@item.Category.CategoryName</span>
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-primary btn-sm" href="/Content/ContentByHeading/@item.HeadingID">
                                        <i class="fas fa-folder"></i>
                                        Yazılar
                                    </a>
                                    <a class="btn btn-info btn-sm" href="/Heading/EditHeading/@item.HeadingID">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Düzenle
                                    </a>
                                    <a class="@delcolor" href="/Heading/DeleteHeading/@item.HeadingID">
                                        <i class="@delicon">
                                        </i>
                                        @delyazi
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
</body>
</html>
<a href="/Heading/AddHeading/" class="btn btn-primary">Yeni Başlık Girişi</a>


