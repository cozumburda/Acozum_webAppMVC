@model EntityLayer.Concrete.Skill

@{
    ViewBag.Title = "EditSkill";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Başlık Güncelleme Sayfası</h2>
@using (Html.BeginForm("EditSkill", "Skill", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Yetenek ID")
        @Html.TextBoxFor(x => x.SkillID, new { @class = "form-control" })
        <br />
        @Html.Label("Yetenek Adı")
        @Html.TextBoxFor(x => x.SkillName, new { @class = "form-control" })
        <br />
        @Html.Label("Yetenek Derecesi")
        @Html.TextBoxFor(x => x.SkillRank, new { @class = "form-control" })
        <br />
        @Html.Label("İsim")
        @Html.TextBoxFor(x => x.WriterID, new { @class = "form-control" })
        <br />
        <button class="btn btn-success">Güncelle</button>
    </div>
}

