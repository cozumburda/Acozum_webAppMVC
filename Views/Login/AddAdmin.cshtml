@model EntityLayer.Concrete.Admin
@{
    ViewBag.Title = "AddAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Admin Oluşturma Sayfası</h1>
<br />
@using (Html.BeginForm("AddAdmin", "Login", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Admin Kullanıcı Adı")
        @Html.TextBoxFor(x => x.AdminUserName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.AdminUserName, "", new { @class = "badge badge-danger" })
        <br />
        @Html.Label("Admin Şifresi")
        @Html.TextBoxFor(x => x.AdminPassword, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.AdminPassword, "", new { @class = "badge badge-danger" })
        <br />
        @Html.Label("Admin Rolü")
        @Html.TextBoxFor(x => x.AdminRole, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.AdminRole, "", new { @class = "badge badge-danger" })
        <br />
        <button class="btn btn-info">Kaydet</button>
    </div>
}
