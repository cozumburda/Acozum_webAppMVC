@using EntityLayer.Concrete
@model List<Writer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{string delyazi = ""; }
@{string delicon = ""; }
@{string delcolor = ""; }
@{string stayazi = ""; }
@{string staicon = ""; }
@{string stacolor = ""; }
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <!-- /.navbar -->
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Yazarlar Sayfası</h1>
                </div>
                <div class="col-sm-6">
                    <a href="/Writer/AddWriter" class="btn btn-info float-right">Yeni Yazar Ekle</a>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card card-solid">
            <div class="card-body pb-0">
                <div class="row d-flex align-items-stretch">
                    @foreach (var item in Model)
                    {
                        switch (item.WriterStatus)
                        {
                            case true:
                                delyazi = "Pasif Yap";
                                delicon = "fas fa-lock";
                                delcolor = "btn btn-danger btn-sm";
                                stacolor = "badge badge-success";
                                staicon = "fas fa-lock-open";
                                stayazi = "Aktif";
                                break;
                            case false:
                                delyazi = "Aktif Yap";
                                delicon = "fas fa-lock-open";
                                delcolor = "btn btn-success btn-sm";
                                stacolor = "badge badge-danger";
                                staicon = "fas fa-lock";
                                stayazi = "Pasif";
                                break;
                        }
                        <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">
                            <div class="card bg-light">
                                <div class="card-header text-muted border-bottom-0">
                                    @item.WriterTitle <span class="@stacolor float-right">@stayazi <i class="@staicon"></i></span>
                                </div>
                                <div class="card-body pt-0">
                                    <div class="row">
                                        <div class="col-7">
                                            <h2 class="lead"><b> @item.WriterName @item.WriterSurName</b></h2>
                                            <p class="text-muted text-sm"><b>Hakkında: </b>@item.WriterAbout.</p>
                                            <ul class="ml-4 mb-0 fa-ul text-muted">
                                                <li class="small"><span class="fa-li"><i class="fas fa-lg fa-building"></i></span>Mail:@item.WriterMail</li>
                                            </ul>
                                        </div>
                                        <div class="col-5 text-center">
                                            <img src="@item.WriterImage" alt="" class="img-circle img-fluid">
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="text-right">
                                        <a href="/Writer/HeadingsWriter/@item.WriterID" class="btn btn-sm bg-teal">
                                            <i class="fas fa-comments"></i> Yazarın Başlıkları
                                        </a>
                                        <a href="/Writer/EditWriter/@item.WriterID" class="btn btn-sm btn-primary">
                                            <i class="fas fa-user"></i> Profili Düzenle
                                        </a>                                        
                                        <a class="@delcolor" href="/Writer/DeleteWriter/@item.WriterID">
                                            <i class="@delicon"></i> @delyazi
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <!-- /.card -->
    </section>
    <!-- /.content -->
</body>
</html>
