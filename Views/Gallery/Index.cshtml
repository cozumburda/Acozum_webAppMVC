<body class="hold-transition sidebar-mini">

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Sözlük Galerisi</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card card-primary">
                        <div class="card-header">
                            <div class="card-title">
                                Resimler
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                @foreach (var item in Model)
                                {
                                    <div class="col-sm-2">
                                        <a href="@item.ImagePath" data-toggle="lightbox" data-title="@item.ImageName" data-gallery="gallery">
                                            <img src="@item.ImagePath" class="img-fluid mb-2" alt="@item.ImageName" />
                                        </a>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <button class="btn btn-primary" data-toggle="modal" data-target="#Modal2">
                Resim Ekle
            </button>
            @Html.Action("GaleryPartial", "Gallery")

            @if (@TempData["Message"] != null)
            {
                <script type="text/javascript">
                    window.onload = function () {
                        swal("Tebrikler!", "@Html.Raw(TempData["Message"])", "success");
                    };
                </script>
            }
            else if (@TempData["Message1"] != null)
            {
                <script type="text/javascript">
                    window.onload = function () {
                        swal("Hata!", "@Html.Raw(TempData["Message1"])", "error");
                    };
                </script>
            }
            else if (@TempData["Message2"] != null)
            {
                <script type="text/javascript">
                    window.onload = function () {
                        swal("Hata!", "@Html.Raw(TempData["Message2"])", "error");
                    };
                </script>
            }
        </div><!-- /.container-fluid -->
    </section>

    <!-- /.content -->
    <!-- ./wrapper -->
